<UserControl x:Class="WpfApp1.Views.Pages.ServicePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="{StaticResource Montserrat}"
             >
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel>
                <Label Content="Хотите заказать услугу?" FontSize="26" HorizontalAlignment="Center"/>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Название услуги" FontSize="26"/>
                    <TextBox Style="{StaticResource TextBoxStyle}"/>
                    <TextBlock Text="Описание" FontSize="26"/>
                    <TextBox Style="{StaticResource TextBoxStyle}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
