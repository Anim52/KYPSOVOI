<UserControl x:Class="WpfApp1.Views.Pages.AdminServicePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <StackPanel VerticalAlignment="Center">
                <Button Style="{StaticResource LoginButton}" Background="#A98743" Margin="10" Content="Выполнить" Command="{Binding CompleteRequestCommand}" IsEnabled="{Binding SelectedService}" />
                <Button Style="{StaticResource LoginButton}" Background="#A98743" Margin="10" Content="Удалить" Command="{Binding DeleteRequestCommand}" IsEnabled="{Binding SelectedService}" />
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <ListBox ItemsSource="{Binding ServiceRequests}" 
                     SelectedItem="{Binding SelectedService}" 
                     DisplayMemberPath="Description"
                      Height="450"/>
        </Grid>
    </Grid>
</UserControl>
