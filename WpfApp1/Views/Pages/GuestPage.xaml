<UserControl x:Class="WpfApp1.Views.Pages.GuestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="{StaticResource Montserrat}"
             >
    <Grid>
        <TextBlock Text="Список пользователей"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="10" />

        <!-- Список пользователей -->
        <ListBox ItemsSource="{Binding UsersList}"
                 SelectedItem="{Binding SelectedUser}"
                 Margin="10,50,10,70"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">

            <!-- Оформление элементов списка -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="White"
                            CornerRadius="10"
                            Margin="5"
                            Padding="10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Аватар пользователя (Просто цветной кружок) -->
                            <Ellipse Width="50" Height="50"
                                     Fill="#e0e0e0"
                                     Margin="0,0,10,0" />

                            <!-- Данные пользователя -->
                            <StackPanel>
                                <TextBlock Text="{Binding FirstName}" 
                                           FontWeight="Bold" 
                                           FontSize="18" 
                                           Foreground="#333" />
                                <TextBlock Text="{Binding LastName}" 
                                           FontSize="16" 
                                           Foreground="#555" />
                                <TextBlock Text="{Binding ContactDetails}" 
                                           FontSize="14" 
                                           Foreground="#777" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Кнопка удаления -->
        <Button Content="Удалить пользователя"
                Command="{Binding DeleteUserCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10"
                Width="210"
                Style="{StaticResource LoginButton}"
                />
    </Grid>
</UserControl>
