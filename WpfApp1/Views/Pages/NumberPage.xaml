<UserControl x:Class="WpfApp1.Views.Pages.NumberPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="{StaticResource Montserrat}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Content="Номера" FontSize="26"/>
                <Button Content="Добавить" Style="{StaticResource LoginButton}" Margin="0,30,0,0" Background="#A98743"/>
                <Button Content="Изменить" Style="{StaticResource LoginButton}" Margin="0,30,0,0" Background="#A98743"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <ListBox Background="Transparent"/>
        </Grid>
    </Grid>
</UserControl>
